<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>DemoServlet</servlet-name>
        <servlet-class>at.htlpinkafeld.servletexample.DemoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Square1Servlet</servlet-name>
        <servlet-class>at.htlpinkafeld.servletexample.Square1Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Square2Servlet</servlet-name>
        <servlet-class>at.htlpinkafeld.servletexample.Square2Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletSession</servlet-name>
        <servlet-class>at.htlpinkafeld.servletexample.ServletSession</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MultiplyServlet</servlet-name>
        <servlet-class>at.htlpinkafeld.servletexample.MultiplyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLoeschen</servlet-name>
        <servlet-class>at.htlpinkafeld.servletexample.ServletLoeschen</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPersonServlet</servlet-name>
        <servlet-class>at.htlpinkafeld.servletexample.AddPersonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DemoServlet</servlet-name>
        <url-pattern>/demo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Square1Servlet</servlet-name>
        <url-pattern>/square</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Square2Servlet</servlet-name>
        <url-pattern>/square2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletSession</servlet-name>
        <url-pattern>/servsession</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MultiplyServlet</servlet-name>
        <url-pattern>/multi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLoeschen</servlet-name>
        <url-pattern>/loeschen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPersonServlet</servlet-name>
        <url-pattern>/addpeople</url-pattern>
    </servlet-mapping>
</web-app>